<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Profile</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <!-- Include Navbar -->
  <%- include('partials/navbar') %>

  <header>
    <h1>Your Profile</h1>
  </header>

  <section class="container">
    <!-- Profile Update Form -->
    <form action="/profile" method="POST" class="profile-form">
      <label>Age:
        <input type="number" name="age" value="<%= profile.age %>" required>
      </label>

      <label>Gender:
        <select name="gender" required>
          <option value="male" <%= profile.gender === 'male' ? 'selected' : '' %>>Male</option>
          <option value="female" <%= profile.gender === 'female' ? 'selected' : '' %>>Female</option>
        </select>
      </label>

      <label>Height (cm):
        <input type="number" name="height" step="0.01" value="<%= profile.height %>" required>
      </label>

      <label>Weight (kg):
        <input type="number" name="weight" step="0.01" value="<%= profile.weight %>" required>
      </label>

      <label>Goal Weight (kg):
        <input type="number" name="goal_weight" step="0.01" value="<%= profile.goal_weight %>" required>
      </label>

      <label>Belly Circumference (cm):
        <input type="number" name="belly_circumference" step="0.01" value="<%= profile.belly_circumference %>" required>
      </label>

      <label>Neck Circumference (cm):
        <input type="number" name="neck_circumference" step="0.01" value="<%= profile.neck_circumference %>" required>
      </label>

      <button type="submit">Save Profile</button>
    </form>

    <!-- Delete Profile Form -->
    <form action="/profile/delete" method="POST" style="margin-top: 20px;" onsubmit="return confirm('Are you sure you want to delete your profile?');">
      <button type="submit" style="background-color: #484848;">Delete Profile</button>
    </form>

  </section>

</body>
</html>
